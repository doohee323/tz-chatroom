<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="application.conf" />

	<typeAliases>
<!-- 		<typeAlias alias="ObjectVO" type="com.practice.mybatis.vo.ObjectVO" /> -->

	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${db.default.driver}"/>
				<property name="url" value="jdbc:mysql://localhost:3306/tz.chatroom?autoReconnect=true"/>
<!-- 				<property name="url" value="jdbc:mysql://topzone.dyndns.org:3306/tz.chatroom?characterEncoding=UTF-8"/> -->
				<property name="username" value="${db.default.user}"/>
				<property name="password" value="${db.default.password}"/>
			</dataSource>
		</environment>
	</environments>

	<mappers>
	    <mapper resource="mybatis/sqlmap/Notification.xml"/>
	</mappers>
</configuration>